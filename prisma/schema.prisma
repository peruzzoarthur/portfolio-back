generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  articles  Post[]
}

model Post {
  id          Int      @id @default(autoincrement())
  authors     Author[]
  title       String
  abstract    String
  content     String
  images      Image[]
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Image {
  id        Int     @id @default(autoincrement())
  filename  String  @unique()
  data      Bytes
  articleId Int
  article   Post @relation(fields: [articleId], references: [id], onDelete: Cascade)
}
